<?xml version="1.0" encoding="UTF-8"?>

<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="de.fzi.bwcps.example.subscriber.Subscriber"
         name="Subscriber" 
         description="This a general program to subscribe to a service ">
        
        <AD id="App_id.ID"  
            name="App_id.ID"
            type="String"
            cardinality="0" 
            required="true"
            default="publisher" 
            description="The Application (publisher) that you want to subscribe to -shall be unique-. Same id as the publisher"/>       

        <AD id="subscribe.semanticTopic"  
            name="subscribe.semanticTopic"
            type="String"
            cardinality="0" 
            required="true"
            default="data" 
            description="Default semantic topic to subscribe ."/>
        
        <AD id="subscribe.qos"  
            name="subscribe.qos"
            type="Integer"
            cardinality="0" 
            required="true"
            default="0" 
            description="Default QoS to subscribe the messages with.">
           <Option label="Fire and forget" value="0"/>
           <Option label="Al least once" value="1"/>          
           <Option label="At most once" value="2"/>
        </AD>

        
    </OCD>
    
    <Designate pid="de.fzi.bwcps.example.subscriber.Subscriber">
        <Object ocdref="de.fzi.bwcps.example.subscriber.Subscriber"/>
    </Designate>
</MetaData>
